# ==================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ==================================

APP_NAME="UmuPrime Imóveis"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ==================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ==================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=umuprime
DB_USERNAME=root
DB_PASSWORD=

# ==================================
# DRIVERS DE CACHE E SESSÃO
# ==================================

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ==================================
# CONFIGURAÇÕES DE MEMCACHE/REDIS
# ==================================

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==================================
# CONFIGURAÇÕES DE EMAIL
# ==================================

MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="contato@umuprime.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==================================
# SERVIÇOS DE TERCEIROS
# ==================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ==================================
# CONFIGURAÇÕES DE LOG
# ==================================

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==================================
# CONFIGURAÇÕES ESPECÍFICAS DO PROJETO
# ==================================

# Tamanho máximo de upload de imagens (em KB)
MAX_IMAGE_SIZE=4096

# Número de imóveis por página
IMOVEIS_PER_PAGE=12

# Número de imóveis em destaque na home
DESTAQUES_HOME=6

# ==================================
# VITE (BUILD TOOL)
# ==================================

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
